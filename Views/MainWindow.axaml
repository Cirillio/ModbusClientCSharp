<Window
    x:Class="mbclientava.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:mbclientava.ViewModels"
    Title="Modbus Client"
    Width="760"
    Height="680"
    MinWidth="760"
    MinHeight="680"
    d:DesignHeight="680"
    d:DesignWidth="960"
    x:DataType="vm:MainWindowViewModel"
    Background="#F0F0F0"
    FontFamily="Bahnschrift"
    Icon="/Assets/avalonia-logo.ico"
    mc:Ignorable="d">





    <Window.Styles>
        <Style Selector="TextBlock.h1">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <Style Selector="Button.BaseButton">
            <Setter Property="Background" Value="#42ace1" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
        </Style>

        <Style Selector="Button.BaseButton:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#129ade" />
            <Setter Property="Foreground" Value="White" />
        </Style>

        <Style Selector="Button.BaseButton.Primary:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#0a88c7" />
            <Setter Property="Foreground" Value="White" />
        </Style>

        <Style Selector="Button.BaseButton.Error:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="Red" />
            <Setter Property="Foreground" Value="White" />
        </Style>
    </Window.Styles>


    <Grid MaxWidth="980" RowDefinitions="Auto,*">

        <Border
            Height="60"
            Margin="0,2,0,0"
            Background="#42ace1"
            BoxShadow="0 1 3 0.1 #888888"
            CornerRadius="10">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="28"
                FontWeight="Medium"
                Foreground="WhiteSmoke"
                Text="Modbus Client" />
        </Border>


        <!--  Main  -->

        <Grid
            x:Name="root"
            Grid.Row="1"
            ColumnDefinitions="Auto,*">
            <!--  Left Panel  -->
            <Border
                x:Name="LeftPanel"
                Grid.Column="0"
                Width="200"
                Margin="4,6"
                Padding="10"
                VerticalAlignment="Bottom"
                BoxShadow="0 1 4 0.5 #777777"
                CornerRadius="10">

                <StackPanel Spacing="10">

                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="28"
                        FontWeight="Bold"
                        Foreground="#666"
                        Text="Connection" />
                    <TextBox
                        x:Name="IpInput"
                        BorderBrush="#42ace1"
                        BorderThickness="2"
                        FontSize="18"
                        Text="127.0.0.1"
                        Watermark="IP Address">
                        <TextBox.Styles>
                            <!--  цвет рамки при наведении  -->
                            <Style Selector="TextBox:pointerover /template/ Border">
                                <Setter Property="BorderBrush" Value="#08adff" />
                                <Setter Property="Background" Value="White" />

                                <!--  оранжевый, к примеру  -->
                            </Style>

                            <!--  можно сразу задать цвет рамки в фокусе, если нужно  -->
                            <Style Selector="TextBox:focus  /template/ Border">
                                <Setter Property="BorderBrush" Value="#08adff" />
                            </Style>
                        </TextBox.Styles>
                    </TextBox>
                    <TextBox
                        x:Name="PortInput"
                        BorderBrush="#42ace1"
                        BorderThickness="2"
                        FontSize="18"
                        Text="502"
                        Watermark="Port">
                        <TextBox.Styles>
                            <!--  цвет рамки при наведении  -->
                            <Style Selector="TextBox:pointerover /template/ Border">
                                <Setter Property="BorderBrush" Value="#08adff" />
                                <Setter Property="Background" Value="White" />

                                <!--  оранжевый, к примеру  -->
                            </Style>

                            <!--  можно сразу задать цвет рамки в фокусе, если нужно  -->
                            <Style Selector="TextBox:focus  /template/ Border">
                                <Setter Property="BorderBrush" Value="#08adff" />
                            </Style>
                        </TextBox.Styles>
                    </TextBox>

                    <StackPanel
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="10">
                        <Button
                            x:Name="ConnectButton"
                            Padding="10,6"
                            Classes="BaseButton"
                            Content="Connect"
                            FontSize="18"
                            FontWeight="Light" />
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Spacing="6">
                        <TextBlock FontSize="20" Text="Status:" />
                        <TextBlock
                            x:Name="StatusLabel"
                            FontSize="20"
                            Foreground="Gray"
                            Text="Disconnected" />
                    </StackPanel>

                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="Red"
                        Text="Errors" />
                    <Border BorderBrush="#42ace1" BorderThickness="2">
                        <ListBox
                            x:Name="ErrorBox"
                            MinHeight="80"
                            MaxHeight="260"
                            ScrollViewer.HorizontalScrollBarVisibility="Auto"
                            ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListBox.Styles>
                                <Style Selector="ListBoxItem">
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="FontSize" Value="12" />
                                    <Setter Property="FontWeight" Value="Light" />
                                </Style>
                            </ListBox.Styles>
                        </ListBox>

                    </Border>


                    <StackPanel
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="10">
                        <Button
                            x:Name="ClearLogs"
                            Classes="BaseButton Error"
                            Content="LogsCl" />
                        <Button
                            x:Name="ClearChat"
                            Classes="BaseButton Error"
                            Content="ChatCl" />
                    </StackPanel>

                </StackPanel>

            </Border>
            <!--  Right Panel  -->

            <Border
                Grid.Column="1"
                Margin="4,6"
                Padding="0,10"
                BoxShadow=" 0 1 3 0.2 #777777"
                CornerRadius="5">
                <Grid Grid.Column="1" RowDefinitions="*,Auto">
                    <ListBox
                        x:Name="ChatBox"
                        Margin="0,0,0,10"
                        Padding="10,0"
                        FontSize="14"
                        ScrollViewer.AllowAutoHide="True"
                        SelectionMode="Toggle, Multiple">

                        <ListBox.Styles>
                            <Style Selector="ListBoxItem">
                                <Setter Property="HorizontalAlignment" Value="Left" />
                                <Setter Property="Padding" Value="6, 3" />
                                <Setter Property="Margin" Value="0, 3" />

                                <Setter Property="FontSize" Value="20" />
                                <Setter Property="BorderBrush" Value="#42ace1" />
                                <Setter Property="BorderThickness" Value="2,0,0,0" />

                                <Setter Property="Foreground" Value="Black" />
                                <Setter Property="FontWeight" Value="Light" />
                            </Style>

                            <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="#0a88c7" />
                                <Setter Property="Foreground" Value="WhiteSmoke" />
                            </Style>

                            <!--  убираем выделение  -->
                            <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                                <Setter Property="Background" Value="#42ace1" />

                                <Setter Property="Foreground" Value="White" />
                                <!--  или как в обычном состоянии  -->
                            </Style>

                            <!--  дополнительно, чтобы не было синего фокуса вокруг текста  -->
                            <Style Selector="ListBoxItem:selected:focus /template/ ContentPresenter">
                                <Setter Property="Background" Value="#42ace1" />

                            </Style>
                        </ListBox.Styles>
                    </ListBox>
                    <Grid Grid.Row="1" ColumnDefinitions="Auto,*,Auto">
                        <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Button
                                x:Name="ToggleMenuButton"
                                Width="40"
                                Margin="10,0"
                                Classes="BaseButton Primary"
                                Content="&lt;"
                                CornerRadius="5"
                                FontSize="20" />
                        </Border>
                        <TextBox
                            x:Name="MessageInput"
                            Grid.Column="1"
                            Height="50"
                            BorderBrush="#42ace1"
                            BorderThickness="2"
                            FontSize="18"
                            MaxLength="240"
                            ScrollViewer.VerticalScrollBarVisibility="Visible"
                            Watermark="Type a message... (Max 240 symbols)">
                            <TextBox.Styles>
                                <!--  цвет рамки при наведении  -->
                                <Style Selector="TextBox:pointerover /template/ Border">
                                    <Setter Property="BorderBrush" Value="#08adff" />
                                    <Setter Property="Background" Value="White" />

                                    <!--  оранжевый, к примеру  -->
                                </Style>

                                <!--  можно сразу задать цвет рамки в фокусе, если нужно  -->
                                <Style Selector="TextBox:focus  /template/ Border">
                                    <Setter Property="BorderBrush" Value="#08adff" />
                                </Style>
                            </TextBox.Styles>
                        </TextBox>
                        <Border
                            Grid.Column="2"
                            Margin="10,0"
                            HorizontalAlignment="Center">
                            <Button
                                x:Name="SendButton"
                                Classes="BaseButton Primary"
                                Content="Send"
                                CornerRadius="5"
                                FontSize="20" />
                        </Border>
                    </Grid>
                </Grid>
            </Border>

        </Grid>

    </Grid>


</Window>
